<UserControl x:Class="CourseProjectOOP.View.UserControls.PlaylistBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseProjectOOP.View.UserControls"
             mc:Ignorable="d" Height="117" Width="174" Margin="10 10 0 0">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Image x:Name="PlaylistPreview" Margin="0,0,0,38" >

        </Image>
        <TextBlock x:Name="PlaylistName"  Margin="0,80,45,0" Text="{Binding playlistName}" TextWrapping="Wrap" Foreground="{DynamicResource TextCol}" TextTrimming="CharacterEllipsis"/>
        <TextBlock x:Name="VideoCount"  Margin="124,0,0,103"  TextWrapping="Wrap" Foreground="{DynamicResource TextCol}" TextTrimming="CharacterEllipsis" FontSize="10" Opacity="0.8"/>
        <TextBlock  Margin="129,80,0,0"/>
        <Button Margin="137,88,10,10"  x:Name="editButton" Click="editButton_Click">
            ooo
        </Button>
        <TextBlock Background="black" Panel.ZIndex="-1" Foreground="{DynamicResource TextCol}"></TextBlock>
    </Grid>
</UserControl>
